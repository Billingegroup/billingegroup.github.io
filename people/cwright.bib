@article{wrigh;cm21,
 ackno = {The authors thank Tyrel McQueen (JHU), Jonathan Denney (SBU), and Yusu Wang (SBU) for helpful discussions.  This work was supported as part of GENESIS: A Next Generation Synthesis Center, an Energy Frontier Research Center funded by the U.S. Department of Energy, Office of Science, Basic Energy Sciences under Award Number DE-SC0019212. Use of the National Synchrotron Light Source II, Brookhaven National Laboratory, was supported by the U.S. Department of Energy, Office of Science, Office of Basic Energy Sciences, under Contract No. DE-SC0012704. This material is based upon work (crystal growth through a user proposal) supported by the National Science Foundation (Platform for the Accelerated Realization, Analysis, and Discovery of Interface Materials (PARADIM)) under Cooperative Agreement No. DMR-1539918.},
 author = {Christopher J. ``CJ" Wright and Eric Dooryhee and Lucas A. Pressley and W. Adam Phelan and Peter G. Khalifah and Simon J. L. Billinge},
 doi = {10.1021/acs.chemmater.1c00602},
 facility = {xpd, nslsii},
 grant = {efrc18},
 journal = {Chem. Mater.},
 month = {apr},
 nb = {},
 note = {To be published},
 number = {},
 optannote = {},
 optwwwlanl = {},
 pages = {},
 summary_professional = {The optical float-zone furnace approach for growing large single crystals is a foundational practice in science as it is the best and sometimes only way to grow such crystals from complex materials. However, the practice is considered as something of a ``black art" where the outcomes are sensitively dependent on parameters used in the growth.  There is little fundamental understanding of the underlying physics and chemistry of the nucleation and growth processes.  Progress will be made if the positions, shapes and qualities of crystallites that form during the growth process could be tracked in a non-destructive way, such as in an in situ growth at an x-ray synchrotron.  For this to succeed it is necessary to have data analysis protocols and analysis tools that can do this mapping in a rapid fashion. This work demonstrated a proof of principle of such grain mapping from previously grown TiO2 boules, making use of advanced image processing tools for tracking and mapping the grains.},
 synopsis = {Spatial mapping of diffraction patterns from a boule that was grown in an optical float zone furnace was carried out and automated tools for tracking the grains were developed.  The regions that were good powders were separated from those that had a few crystals of a single crystal.  In the latter regions, image processing methods such as blob tracking were used to map the positions and crystal quality of crystallites in the beam.  The ultimate goal will be to carry out these measurements in an in situ crystal growth context.},
 tags = {2D mapping, spatially resolved, peak tracking, crystal growth},
 title = {Towards In Situ Synchrotron Mapping of Crystal Selection Processes During Crystal Growth},
 url = {\url{https://doi.org/10.1021/acs.chemmater.1c00602}},
 volume = {},
 wwwemail = {},
 wwwpub = {},
 year = {2021}
}

